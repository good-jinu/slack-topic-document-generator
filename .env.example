# Required
AI_API_KEY=your-ai-api-key-here

# Slack Configuration
SLACK_CONFIG_TOKEN="xoxp-your-token-here"
SLACK_USER_TOKEN=xoxp-your-token-here
SLACK_CHANNELS=C1234567890,C0987654321,C1111111111

# Optional - AI Configuration
AI_PROVIDER=google-genai
AI_MODEL=gemini-2.5-flash-lite
AI_BASE_URL=https://api.openai.com/v1
AI_RATE_LIMIT_DELAY=10000
AI_MAX_RETRIES=3

# Examples for different providers:
# For OpenAI: AI_PROVIDER=openai, AI_BASE_URL=https://api.openai.com/v1
# For NVIDIA: AI_PROVIDER=nvidia, AI_BASE_URL=https://integrate.api.nvidia.com/v1
# For Azure OpenAI: AI_PROVIDER=azure-openai, AI_BASE_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment

# Optional - Database Configuration
DATABASE_PATH=slack_messages.db
DATABASE_BACKUP_ENABLED=false

# Optional - Output Configuration
DOCUMENTS_PATH=db_docs
OUTPUT_FORMAT=markdown

# Optional - Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE=true